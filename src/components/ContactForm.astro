<script>
  // Simple form handling with Vanilla JS
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    const successMsg = document.getElementById('formSuccess') as HTMLElement;
    const errorMsg = document.getElementById('formError') as HTMLElement;

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Reset states
        if (successMsg) successMsg.style.display = 'none';
        if (errorMsg) errorMsg.style.display = 'none';
        
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Enviando...';
          submitBtn.classList.add('loading');
        }

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
          // POST request to Formspree
          // IMPORTANT: Replace 'YOUR_FORM_ID' with your actual Formspree Form ID
          const response = await fetch('https://formspree.io/f/YOUR_FORM_ID', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            form.reset();
            if (successMsg) successMsg.style.display = 'block';
            if (submitBtn) submitBtn.textContent = 'Mensaje Enviado';
            
            // Revert button text after 3 seconds
            setTimeout(() => {
                if(submitBtn) {
                     submitBtn.disabled = false;
                     submitBtn.textContent = 'Enviar mensaje';
                     submitBtn.classList.remove('loading');
                }
            }, 3000);

          } else {
             throw new Error('Form submission failed');
          }
        } catch (error) {
          console.error('Error:', error);
          if (errorMsg) errorMsg.style.display = 'block';
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Reintentar';
            submitBtn.classList.remove('loading');
          }
        }
      });
    }
  });
</script>

<form class="contact-form" id="contactForm">
  <div class="form-group">
    <label for="name">Nombre</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      aria-required="true"
    />
  </div>

  <div class="form-group">
    <label for="email">Correo electrónico</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      aria-required="true"
    />
  </div>

  <div class="form-group">
    <label for="message">Mensaje</label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      aria-required="true"
    ></textarea>
  </div>

  <button type="submit" class="submit-btn">
    Enviar mensaje
  </button>

  <p id="formSuccess" class="success-message" style="display: none;">
    ¡Gracias! Hemos recibido tu mensaje y te contactaremos pronto.
  </p>

  <p id="formError" class="error-message" style="display: none;">
    Hubo un error al enviar el mensaje. Por favor, inténtalo de nuevo.
  </p>
</form>

