---
import ScrollSection from './ScrollSection.astro';
import { ui } from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = ui[lang];
---

<ScrollSection id="before-after" theme="light">
  <div class="grid">
    <div class="col">
      <h3 class="text-uppercase mb-4 text-gray-400">{t['compare.before.title']}</h3>
      <ul class="list text-large">
        <li>{t['compare.before.1']}</li>
        <li>{t['compare.before.2']}</li>
        <li>{t['compare.before.3']}</li>
      </ul>
    </div>
    
    <div class="col">
      <h3 class="text-uppercase mb-4 text-accent">{t['compare.after.title']}</h3>
      <ul class="list text-large">
        <li>{t['compare.after.1']}</li>
        <li>{t['compare.after.2']}</li>
        <li>{t['compare.after.3']}</li>
      </ul>
    </div>
  </div>
  
  <div class="mt-20">
    <p class="text-display">{t['compare.key']}</p>
  </div>
</ScrollSection>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .list {
    list-style: none;
    padding: 0;
  }
  
  .list li {
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-gray-100);
  }

  .mt-20 { margin-top: 5rem; }
  .mb-4 { margin-bottom: 1rem; }
  .text-gray-400 { color: #9ca3af; }
  .text-accent { color: var(--color-black); }
</style>
