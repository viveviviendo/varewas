---
import ScrollSection from './ScrollSection.astro';
import { ui } from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = ui[lang];
---

<ScrollSection id="hero" theme="dark" class="hero-section">
  <div class="content">
    <h1 class="text-hero mb-8">{t['hero.headline']}</h1>
    <p class="text-large opacity-80">{t['hero.subheadline']}</p>
  </div>
</ScrollSection>

<style>
  .hero-section {
    min-height: 80vh; /* Reduced from 90vh */
    display: flex;
    align-items: center;
    padding-bottom: 0 !important; /* Force no padding at bottom */
  }
  .mb-8 { margin-bottom: 2rem; }
  .opacity-80 { opacity: 0.8; }
</style>