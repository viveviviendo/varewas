---
import ScrollSection from './ScrollSection.astro';
import { ui } from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = ui[lang];
---

<ScrollSection id="hero" theme="dark" class="hero-section">
  <div class="content">
    <h1 class="text-hero mb-8">{t['hero.headline']}</h1>
    <p class="text-large opacity-80">{t['hero.subheadline']}</p>
  </div>
</ScrollSection>

<style>
  :global(.hero-section) {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 5rem; /* Add top padding for mobile to avoid header overlap */
    padding-bottom: 45vh !important; /* Shifting text UP to match 25vh gradient center */
  }
  
  /* Desktop: remove extra top padding */
  @media (min-width: 768px) {
    :global(.hero-section) {
      padding-top: 0;
    }
  }
  
  .mb-8 { margin-bottom: 2rem; }
  .opacity-80 { opacity: 0.8; }
</style>