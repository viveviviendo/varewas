---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { ui } from '../i18n/ui';

const lang = 'en';
const t = ui[lang];
---

<Layout title={t['nav.contact']} lang={lang}>
  <main class="contact-page section">
    <div class="container">
      <h1 class="text-hero mb-8">{t['nav.contact']}</h1>
      <p class="text-large mb-12">{t['cta.tell_us']}</p>
      
      <div class="form-container">
        <ContactForm lang={lang} />
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-page {
    padding-top: 120px; /* Space for fixed header */
    min-height: 80vh;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .form-container {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .mb-8 { margin-bottom: 2rem; }
  .mb-12 { margin-bottom: 3rem; }
  
  h1 {
    font-size: 3rem;
    font-weight: 700;
  }
  
  .text-large {
    font-size: 1.25rem;
    color: var(--color-gray-500);
  }
</style>
