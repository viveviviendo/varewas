<section class="hero">
  <div class="container hero-container">
    <div class="hero-content">
      <div class="pill glass-panel">
        <span class="indicator"></span>
        Swiss-Grade Tokenization
      </div>
      
      <h1 class="text-gradient">
        The Future of <br/>
        Real World Assets
      </h1>
      
      <p class="hero-text">
        Structure, issue, and manage digital assets with Swiss compliance. 
        VAREWAS bridges the gap between traditional finance and blockchain technology.
      </p>

      <div class="cta-group">
        <a href="#start" class="btn-primary neon-glow">Start Tokenizing</a>
        <a href="#learn" class="btn-secondary">Learn More</a>
      </div>
    </div>

    <div class="hero-visual animate-float">
      <div class="glass-card project-card">
        <div class="card-header">
          <span class="status-dot pulsing"></span>
          <span class="card-title">Last Project</span>
        </div>
        <div class="card-body">
          <div class="token-amount">AI</div>
          <div class="token-label">Asset AI Verification SaaS</div>
        </div>
        <div class="card-footer">
          <div class="progress-bar">
            <div class="progress" style="width: 75%"></div>
          </div>
          <span class="success-text">In Development</span>
        </div>
      </div>

      <div class="glass-card project-card">
        <div class="card-header">
          <span class="status-dot"></span>
          <span class="card-title">Previous Project</span>
        </div>
        <div class="card-body">
          <div class="token-amount">34M</div>
          <div class="token-label">Carbon Tokens Tokenized</div>
        </div>
        <div class="card-footer">
          <div class="progress-bar">
            <div class="progress" style="width: 100%"></div>
          </div>
          <span class="success-text">Successfully Issued</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    /* Removed min-height: 100vh to reduce vertical gaps */
    padding-top: 120px; /* Fixed top spacing */
    padding-bottom: 4rem;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem; /* Reduced gap */
    width: 100%;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 900px;
    width: 100%; /* Ensure full width for centering */
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .indicator {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--color-accent);
  }

  h1 {
    font-size: clamp(3rem, 6vw, 5.5rem);
    line-height: 1.1;
    font-weight: 700;
    margin-bottom: 1.5rem;
    width: 100%; /* Ensure it takes full width to respect text-align center */
  }

  .hero-text {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    max-width: 600px;
    line-height: 1.6;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-primary {
    background: var(--gradient-main);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: 600;
    border: 1px solid var(--color-border);
    transition: background 0.2s;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Visuals */
  .hero-visual {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 2rem;
    gap: 2rem; /* Add gap between cards */
    flex-wrap: wrap; /* Allow wrapping on smaller screens */
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
  }

  .project-card {
    padding: 2rem 3rem;
    width: 100%;
    max-width: 400px; /* Reduced max-width to fit two cards */
    background: linear-gradient(145deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1 1 300px; /* Allow shrinking/growing */
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    margin-bottom: 1.5rem;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow: 0 0 8px var(--color-accent);
  }

  .pulsing {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(6, 182, 212, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(6, 182, 212, 0); }
    100% { box-shadow: 0 0 0 0 rgba(6, 182, 212, 0); }
  }

  .card-title {
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .token-amount {
    font-size: 3rem;
    font-weight: 700;
    background: var(--gradient-main);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .token-label {
    font-size: 1rem;
    color: var(--color-text-main);
    margin-bottom: 1.5rem;
  }

  .card-footer {
    width: 100%;
  }

  .progress-bar {
    height: 4px;
    background: rgba(255,255,255,0.05);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress {
    height: 100%;
    background: var(--color-accent);
    box-shadow: 0 0 10px var(--color-accent);
  }

  .success-text {
    font-size: 0.8rem;
    color: var(--color-accent);
    display: block;
    text-align: center;
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
    }
    
    h1 {
      font-size: 2.5rem;
    }

    .project-card {
        max-width: 100%; /* Full width on mobile */
    }
  }
</style>