---
interface Props {
  id?: string;
  class?: string;
  theme?: 'dark' | 'light';
}

const { id, class: className, theme = 'dark' } = Astro.props;
---

<section id={id} class:list={["section", className]} data-theme-section={theme}>
  <div class="container fade-in-section">
    <slot />
  </div>
</section>

<style>
  /* The observer in layout will toggle the .visible class on .fade-in-section */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1), transform 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  :global(.visible) .fade-in-section {
    opacity: 1;
    transform: translateY(0);
  }
</style>
