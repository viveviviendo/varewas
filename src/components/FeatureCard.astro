---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon = "âœ¨" } = Astro.props;
---

<div class="feature-card glass-panel">
  <div class="icon-wrapper neon-glow">
    {icon}
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .feature-card {
    padding: 2rem;
    border-radius: var(--radius-md);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    border-color: var(--color-primary);
  }

  .icon-wrapper {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-main);
  }

  p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }
</style>
