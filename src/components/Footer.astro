---
import { ui } from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = ui[lang] || ui['en']; // Fallback to 'en' if lang is invalid
---

<footer class="footer section" data-theme-section="light">
  <div id="dots-container" class="dots-container"></div>
  <div class="container">
    <div class="footer-grid">

      <div class="actions">
        <a href="#" class="btn-primary">{t['cta.tell_us']}</a>
        <a href="#contact" class="btn-secondary">{t['cta.contact']}</a>
      </div>
      
      <div id="contact" class="subscribe highlight-box">
        <p class="text-small mb-4 font-bold">{t['cta.subscribe_text']}</p>

        <form 
          action="https://formspree.io/f/abcdwxyz" 
          method="POST"
        >
          <input 
            type="email" 
            name="email" 
            placeholder={t['cta.email_placeholder']} 
            class="input-email" 
            required 
          />
          <input type="hidden" name="_subject" value="Nueva suscripción VAREWAS" />
          <input type="hidden" name="_template" value="table" />
          
          <button type="submit" class="btn-subscribe">{t['cta.subscribe_btn']}</button>
        </form>
      </div>
    </div>
    
    <div class="copyright mt-20">
      <p class="text-uppercase">VAREWAS © {new Date().getFullYear()}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    min-height: 50vh; 
    justify-content: flex-end; 
    position: relative;
    overflow: hidden;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--color-gray-300);
    align-items: center;
  }
  
  /* Highlight Box for Subscription */
  .highlight-box {
    border: 2px solid var(--color-black);
    padding: 2rem;
    background: var(--color-off-white);
  }
  
  .font-bold {
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }
  
  .btn-primary {
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--color-black);
    border-bottom: 1px solid var(--color-black);
    padding-bottom: 0.25rem;
    transition: opacity 0.3s ease;
  }
  
  .btn-secondary {
    font-size: 1rem;
    text-decoration: none;
    color: var(--color-gray-500);
    transition: color 0.3s ease;
  }
  
  .btn-primary:hover, .btn-secondary:hover {
    opacity: 0.7;
    color: var(--color-black);
  }

  .subscribe-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .input-email {
    flex: 1;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--color-gray-300);
    padding: 0.5rem 0;
    outline: none;
    color: var(--color-black);
  }
  
  .input-email::placeholder {
    color: var(--color-gray-500);
  }
  
  .btn-subscribe {
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--color-black);
    padding: 0.5rem 0;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .mt-20 { margin-top: 2rem; }
  .mb-4 { margin-bottom: 1rem; }

  .dots-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }
  
  .container {
    position: relative;
    z-index: 2;
  }
</style>


<script>
  // Dots animation
  const container = document.getElementById('dots-container');
  if (container) {
    const DOT_COUNT = 75;
    for (let i = 0; i < DOT_COUNT; i++) {
        const dot = document.createElement('div');
        const size = Math.floor(Math.random() * 12) + 4; // 4px to 16px
        
        dot.style.width = `${size}px`;
        dot.style.height = `${size}px`;
        dot.style.backgroundColor = '#ff3333'; // Bright Red
        dot.style.borderRadius = '50%';
        dot.style.position = 'absolute';
        
        // Random position
        dot.style.top = `${Math.random() * 90 + 5}%`; // Avoid extreme edges
        dot.style.left = `${Math.random() * 90 + 5}%`;
        
        dot.style.opacity = '1';
        
        container.appendChild(dot);
    }
  }
</script>