---
import { ui } from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = ui[lang] || ui['en']; // Fallback
---

<footer class="footer section" data-theme-section="light">
  <div id="dots-container" class="dots-container"></div>

  <div class="container">
    <div class="footer-grid">

      <!-- CONTACT FORM -->
      <div id="contact" class="subscribe highlight-box">
        <p class="text-small mb-4 font-bold">
           {t['cta.tell_us']}
        </p>

        <!-- Formspree POST -->
        <form
          action="https://formspree.io/f/xkogdzdw"
          method="POST"
        >
          <input
            type="email"
            name="email"
            placeholder={t['cta.email_placeholder']}
            class="input-field"
            required
          />

          <textarea
            name="message"
            placeholder={t['cta.message_placeholder']}
            class="input-field textarea-field"
            rows="3"
            required
          ></textarea>

          <input type="hidden" name="_subject" value="Nuevo contacto VAREWAS" />
          <input type="hidden" name="_template" value="table" />

          <!-- REDIRECT BACK WITH PARAMETER -->
          <input
            type="hidden"
            name="_redirect"
            value={Astro.url.href + (Astro.url.search ? '&' : '?') + "success=true"}
          />

          <button type="submit" class="btn-subscribe">
            {t['cta.send_message']}
          </button>
        </form>
      </div>

    </div>

    <div class="copyright mt-20">
      <p class="text-uppercase">
        VAREWAS Â© {new Date().getFullYear()}
      </p>
    </div>
  </div>

  <!-- SUCCESS POPUP -->
  <div id="success-popup" class="popup-overlay hidden">
    <div class="popup-content">
      <h3 class="popup-title">{t['popup.title']}</h3>
      <p class="popup-text">{t['popup.text']}</p>
      <button id="close-popup" class="btn-popup">{t['popup.back']}</button>
    </div>
  </div>
</footer>

<style>
  .footer {
    min-height: 50vh;
    justify-content: flex-end;
    position: relative;
    overflow: hidden;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 600px;
    margin: 0 auto; /* Center the form since actions are gone */
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--color-gray-300);
    align-items: center;
  }

  .highlight-box {
    border: 2px solid var(--color-black);
    padding: 2rem;
    background: var(--color-off-white);
  }

  .font-bold {
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .input-field {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--color-gray-300);
    padding: 0.5rem 0;
    outline: none;
    color: var(--color-black);
    margin-bottom: 1rem;
    font-family: inherit;
    font-size: 1rem;
  }

  .textarea-field {
    resize: vertical;
    min-height: 80px;
  }

  .input-field::placeholder {
    color: var(--color-gray-500);
  }

  .btn-subscribe {
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--color-black);
    padding: 0.5rem 0;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    margin-top: 1rem;
    width: 100%;
    text-align: left;
    transition: opacity 0.3s ease;
  }

  .btn-subscribe:hover {
    opacity: 0.7;
  }

  .mt-20 {
    margin-top: 2rem;
  }

  .mb-4 {
    margin-bottom: 1rem;
  }

  .dots-container {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .container {
    position: relative;
    z-index: 2;
  }

  /* POPUP STYLES */
  .popup-overlay {
    position: fixed;
    inset: 0;
    background: rgba(255, 255, 255, 0.95);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .popup-overlay.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .popup-content {
    background: var(--color-off-white);
    border: 2px solid var(--color-black);
    padding: 3rem;
    text-align: center;
    max-width: 400px;
    width: 90%;
  }

  .popup-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .popup-text {
    font-size: 1rem;
    color: var(--color-gray-500);
    margin-bottom: 2rem;
  }

  .btn-popup {
    background: var(--color-black);
    color: var(--color-off-white);
    border: none;
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    font-size: 1rem;
    transition: opacity 0.3s ease;
  }

  .btn-popup:hover {
    opacity: 0.8;
  }

</style>

<script>
  // DOTS ANIMATION
  const container = document.getElementById('dots-container');

  if (container) {
    const DOT_COUNT = 75;

    for (let i = 0; i < DOT_COUNT; i++) {
      const dot = document.createElement('div');
      const size = Math.floor(Math.random() * 12) + 4;

      dot.style.width = `${size}px`;
      dot.style.height = `${size}px`;
      dot.style.backgroundColor = '#ff3333';
      dot.style.borderRadius = '50%';
      dot.style.position = 'absolute';
      dot.style.top = `${Math.random() * 90 + 5}%`;
      dot.style.left = `${Math.random() * 90 + 5}%`;

      container.appendChild(dot);
    }
  }

  // POPUP LOGIC
  const popup = document.getElementById('success-popup');
  const closeBtn = document.getElementById('close-popup');

  if (popup && closeBtn) {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'true') {
      popup.classList.remove('hidden');

      // Clean URL
      const newUrl = window.location.pathname;
      window.history.replaceState({}, '', newUrl);
    }

    closeBtn.addEventListener('click', () => {
      popup.classList.add('hidden');
    });
  }
</script>